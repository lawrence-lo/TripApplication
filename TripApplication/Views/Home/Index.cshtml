@model TripApplication.Models.ViewModels.DetailsHome
@{
    ViewBag.Title = "Home Page";
}
@section HeadScripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.12.0/css/ol.css" type="text/css">
    <link rel="stylesheet" href="~/Content/map.css" type="text/css">
    <script src="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.12.0/build/ol.js"></script>
}
@section scripts {
    <script src="~/Scripts/map.js"></script>
}

<h2>I have been to @Model.DestinationCount destinations in @Model.CountryCount countries.</h2>

<div id="map" class="map"></div>
<div id="popup" class="ol-popup">
    <a href="#" id="popup-closer" class="ol-popup-closer"></a>
    <div id="popup-content"></div>
</div>