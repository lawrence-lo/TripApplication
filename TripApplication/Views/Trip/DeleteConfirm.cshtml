@model TripApplication.Models.TripDto

@{
    ViewBag.Title = "Confirm Delete";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <h2>Are you sure you want to delete this trip?</h2>
        <div class="list-group">
            <div class="list-group-item text-center">
                <h3 class="list-group-item-heading text-center">@Model.TripFromDate.ToString("MMM dd, yyyy") - @Model.TripToDate.ToString("MMM dd, yyyy")</h3>
                <p class="list-group-item-text">Trip Name: @Model.TripName</p>
            </div>
        </div>
        <div class="text-center">
            <form action="/Trip/Delete/@Model.TripID" method="POST">
                <button class="btn btn-danger" type="submit">Confirm Delete</button>
                <a class="btn btn-default y-margin" href="/Trip/List" role="button">Cancel</a>
            </form>
        </div>
    </div>
</div>