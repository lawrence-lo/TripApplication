@model TripApplication.Models.ViewModels.DetailsHome
@{
    ViewBag.Title = "Home Page";
}
@section HeadScripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.12.0/css/ol.css" type="text/css">
    <link rel="stylesheet" href="~/Content/map.css" type="text/css">
    <link rel="stylesheet" href="~/Content/home.css" type="text/css">
    <script src="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.12.0/build/ol.js"></script>
}
@section scripts {
    <script src="~/Scripts/map.js"></script>
}
<div class="row">
    <div class="col-sm-5 col-sm-offset-1">
        <h2>Digital travel journal for travellers</h2>
        <p>I have been to...</p>
        <p class="text-center"><span>@Model.DestinationCount</span> destinations in <span>@Model.CountryCount</span> countries</p>
        <p class="text-center">and counting—</p>
        <div class="text-center"><a class="btn btn-default btn-custom" href="/Trip/List" role="button">View Trips</a></div>
    </div>

    <div class="col-sm-5">
        <div id="map" class="map"></div>
        <div id="popup" class="ol-popup">
            <a href="#" id="popup-closer" class="ol-popup-closer"></a>
            <div id="popup-content"></div>
        </div>
    </div>
</div>