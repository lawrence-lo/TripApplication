@model TripApplication.Models.DestinationDto

@{
    ViewBag.Title = "Confirm Delete";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <h2>Are you sure you want to delete this destination?</h2>
        <div class="list-group">
            <div class="list-group-item text-center">
                <h3 class="list-group-item-heading text-center">@Model.DestinationName</h3>
                <p class="list-group-item-text">Country: @Model.DestinationCountry</p>
            </div>
        </div>
        <div class="text-center">
            <form action="/Destination/Delete/@Model.DestinationID" method="POST">
                <button class="btn btn-danger" type="submit">Confirm Delete</button>
                <a class="btn btn-default y-margin" href="/Destination/List" role="button">Cancel</a>
            </form>
        </div>
    </div>
</div>