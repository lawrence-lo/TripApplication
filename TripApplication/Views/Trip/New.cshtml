
@{
    ViewBag.Title = "Create";
}

<h2>Create Trip</h2>
<form action="/Trip/Create" method="POST">
    <div>
        <label>Name:</label> <input type="text" name="TripName" />
    </div>
    <div>
        <label>From:</label> <input type="date" name="TripFromDate" />
    </div>
    <div>
        <label>To:</label> <input type="date" name="TripToDate" />
    </div>
    <div>
        <label>Remarks:</label><textarea name="TripRemarks" rows="4" cols="50"></textarea>
    </div>
    <div>
        <input type="submit" value="Add Trip" />
    </div>
</form>

